<div class="page" id="page">
	<div role="main">
		<section class="hero-and-insets">
			{{# hero }}
				{{> 01-compounds/01-blocks/00-block-hero.mustache }}
			{{/ hero }}

			{{# subs }}
				{{> 01-compounds/01-blocks/01-block-sub.mustache }}
			{{/ subs }}
		</section>

		{{# homepage }}
			<hr />
		{{/ homepage }}

		<div class="l-two-col">
			<div class="l-main">
				<section class="section latest-posts">
					<h2 class="section-title">{{ latest_posts_title }}</h2>
					<ul class="post-list">
						{{# latest_posts }}
							<li>
								{{> 01-compounds/01-blocks/02-block-media.mustache }}
							</li>
						{{/ latest_posts }}
					</ul>
					{{# view_more_msg }}
						<a href="{{ view_more_href }}" class="text-btn">{{ view_more_msg }}</a>
					{{/ view_more_msg }}
				</section>
			</div><!--end .l-main-->

			<div class="l-sidebar">
				{{> 02-components/03-sections/00-recent-comments }}
			</div><!--end .l-sidebar-->
		</div><!--end .l-two-col-->
	</div><!--End role=main-->
</div>
