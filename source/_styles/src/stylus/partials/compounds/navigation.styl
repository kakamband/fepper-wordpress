.nav
	clear: both
	overflow: hidden
	a
		display: block
	&.active
		max-height: none
	@media all and (max-width: $bp-sm-max)
		max-height: 0
		li
			border-top: 1px solid $gray-light-2
		a
			display: table
			padding: $pad-half $pad
		.children
			li
				padding-left: 2rem
	@media all and (min-width: $bp-med)
		border-top: 1px solid $gray-light-2
		clear: none
		float: right
		margin-top: -0.1rem
		max-height: none
		padding-top: $pad-quarter * 3
		li
			float: left
		a
			border: 0
			padding: $pad-quarter $pad
		.children
			max-height: 0
			overflow: hidden
			position: absolute
			z-index: 2
			li
				background-color: $white
				border: 1px solid $gray-light-2
				border-bottom: 0
				float: none
				width: 100%
			li:last-child
				border-bottom: 1px solid $gray-light-2
		.page_item_has_children:hover
			.children
				max-height: none
				transition: max-height 0.3s ease
.pagination
	display: flex
	flex-wrap: wrap
	justify-content: center
	padding-bottom: 1em
	overflow: hidden
	.nav-links > *
		display: block
		float: left
		padding: 0 $pad
		border-right: 1px solid $gray-light-2
		&:last-child
			border: 0
	@media all and (max-width: $bp-small - 1px)
		.nav-links > *
			padding: 0 $pad-half
			&:first-child
				padding-left: 0
			&:last-child
				padding-right: 0
	@media all and (min-width: $bp-med-2)
		justify-content: flex-start
