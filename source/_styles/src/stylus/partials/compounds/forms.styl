form > div
	margin-bottom: $space
form ol, form ul
	list-style: none
	margin-left: 0
fieldset
	border: 0
	padding: 0
	margin: 0
label
	display: block
	padding-bottom: $space-quarter
button, input, select, textarea
	font-family: inherit
	font-size: 100%
	margin: 0
input, textarea
	border: 1px solid $gray
	padding: $pad-half 1.04rem
input[type=text], input[type=search], input[type=url], input[type=number], textarea
	-webkit-appearance: none
button, input[type="submit"]
	padding: $pad-half
	background: $gray-dark
	border: 1px solid $gray
	color: $white
	cursor: pointer
input[type="checkbox"],
input[type="radio"]
	width: auto
	margin-right: 0.3em
input[type="search"]
	-webkit-appearance: none
	border-radius: 0
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
	-webkit-appearance: none
/* Validation */
.has-error
	border-color: $error
.is-valid
	border-color: $valid
/* Search Form */
.widget_search
	margin-bottom: 0
	@media all and (min-width: $bp-med)
		height: 5.5rem
.search-form
	background: $white-translucent
	overflow: hidden
	max-height: 0
	position: relative
	> label
		padding-bottom: 0
	input
		background: transparent
	@media all and (max-width: $bp-sm-max)
		margin-top: 0.3rem
		position: absolute
		top: 4.8rem
		right: 0
		z-index: 2
	@media all and (min-width: $bp-med)
		max-height: none
		margin: 0.65em 0.5em 0 0
.search-form > label
	float: left
.search-form > label:after
	color: $black
	position: absolute
	top: 0.6em
	right: 1em
.search-field
	width: 11.5em
	height: 36px
input[type="submit"].search-submit
	border-left: 0
	color: transparent
	font-size: 0.85em
	height: 36px
	padding-right: 0
	padding-left: 0
	position: relative
	width: 5rem
	z-index: 1
input[type="submit"].search-submit:hover
	background: rgba(0, 0, 0, 0.3)
