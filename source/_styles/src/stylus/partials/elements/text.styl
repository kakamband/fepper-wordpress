h1, .alpha
	line-height: 1.2
h2, .beta
	line-height: 1.2
h3, .gamma
	line-height: 1.2
p
	margin-bottom: $space
blockquote
	font-style: italic
	border-left: 1px solid $gray
	color: $gray
	padding-left: $pad
	margin-bottom: $space
a
	color: $gray-dark
	text-decoration: none
	outline: 0
	&:hover, &:focus
		color: $gray
hr
	border: 0
	height: 2px
	background: $gray-light-2
	margin-bottom: $space-double
