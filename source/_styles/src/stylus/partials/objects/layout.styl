/*------------------------------------*
	$LAYOUT
*------------------------------------*/
/* Layout Container */
.lc
	max-width: $max-width
	margin: 0 auto
	padding: $pad-half
	footer &
		padding: $pad $pad 0
/*------------------------------------*
	$TEMPLATES
*------------------------------------*/
/* Two Column Layout */
.l-two-col
	@extend .cf
	.l-main
		@media all and (min-width: $bp-med-2)
			float: left
			width: 70%
			padding-right: $pad
	.l-sidebar
		@media all and (max-width: $bp-med-2 - 1px)
			clear: both
		@media all and (min-width: $bp-med-2)
			float: left
			width: 30%
			padding: 0 0 0 $pad
