form > div
	margin-bottom: $space
form ol, form ul
	list-style: none
	margin-left: 0
fieldset
	border: 0
	padding: 0
	margin: 0
label
	display: block
	padding-bottom: $space-quarter
button, input, select, textarea
	font-family: inherit
	font-size: 100%
	margin: 0
input, textarea
	border: 1px solid $gray
	padding: $space-half 0.625em
input[type=text], input[type=search], input[type=url], input[type=number], textarea
	-webkit-appearance: none
button, input[type="submit"]
	padding: $space-half
	background: $gray-dark
	border: 1px solid $gray
	border-radius: 0
	color: $white
	cursor: pointer
input[type="checkbox"],
input[type="radio"]
	width: auto
	margin-right: 0.3em
input[type="search"]
	-webkit-appearance: none
	border-radius: 0
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
	-webkit-appearance: none
@media all and (max-width: $bp-xs-max)
	textarea
		width: 100%
// Validation
.required
	color: $error
.has-error
	border-color: $error
// Search Form
#widget-area .widget_search
	margin-bottom: 0
.search-form
	background: $white-translucent
	overflow: hidden
	max-height: 0
	position: relative
	> label
		padding-bottom: 0
	input
		background: transparent
	.header &
		@media all and (max-width: $bp-sm-max)
			margin-top: 1px
			position: absolute
			top: $nav-toggle-height
			right: 0
			z-index: 3
		@media all and (min-width: $bp-med)
			max-height: none
			margin: $space-half 0 0
.search-form > label
	float: left
.search-form > label::after
	@extend .icon-search::before
	color: $black
	position: absolute
	top: 0.7em
	right: 1.1em
.search-field
	width: 13.5em
	@media all and (min-width: $bp-med) and (max-width: ($max-width - 1px))
		width: 11.4375em
input
	height: 2.5em
input[type="submit"].search-submit
	border-left: 0
	color: transparent
	padding-right: 0
	padding-left: 0
	position: relative
	width: 3.125em
	z-index: 1
input[type="submit"].search-submit:hover
	background: rgba(0, 0, 0, 0.3)
