html
	font-size: (100 / 1.6)%
body
	background: $white
	font: 1.6em/1.5 $font-primary
	-webkit-text-size-adjust: 100%
	color: $gray-dark
	min-height: 100vh
	min-width: $bp-xx-max
	position: relative
	@media all and (max-width: $bp-sm-max)
		font-size: 1.4em
h1,
h2,
h3,
h4,
h5,
h6
	margin: 0.4rem 0
	padding: 0.4rem 0 0
h1, h2
	line-height: 1.2
h4
	font-size: 1.1em
h5
	font-size: 1.0625em
h6
	font-size: 1em
a
	color: $gray-dark
	text-decoration: none
	outline: 0
	&:hover, &:focus
		color: $gray
hr
	border: 0
	height: 2px
	background: $gray-light-1
	margin-bottom: $space-double
aside,
.section
	margin-bottom: $space
pre
	overflow: auto
// Completely remove from the flow and screen readers.
.is-hidden
	display: none !important
	visibility: hidden !important
// Completely remove from the flow but leave available to screen readers.
.screen-reader-text,
.visually-hidden
	position: absolute !important
	overflow: hidden
	width: 1px
	height: 1px
	padding: 0 !important
	border: 0
	clip: rect(1px, 1px, 1px, 1px)
// Floats
.right
	float: right
	padding: 0 0 $space $space
.right-search
	float: right
	padding: 0 0 $space 0
.left
	float: left
	padding: 0 $space $space 0
// Text-align
.align-right
	text-align: right
.align-center
	text-align: center
.align-left
	text-align: left
// Display classes
.valid
	color: $valid
.error
	color: $error
.text-btn
	font-style: italic
// Hide elements in print view
@media print
	header.header,
	form,
	footer.footer
		display: none
