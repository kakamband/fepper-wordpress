.header
	background-color: $white
	border-bottom: 1px solid $gray-light-3
	margin: 0 0 $space 0
	max-width: none
	padding: 0
	width: 100%
	@extend .lc
	a
		&:hover, &:focus
			color: $gray
	.site-branding
		padding-left: $space-half
.header-no-image
	margin-bottom: 0
@media all and (min-width: $max-width)
	.header
		> *:not(.site-branding)
			padding-right: "calc((100% - %s) / 2)" % $max-width
			padding-left: "calc((100% - %s) / 2)" % $max-width
		.site-branding
			padding-left: "calc((100% - %s + %s) / 2)" % ($max-width $space)
	.header-no-image
		.nav,
		.header div[class^="menu-"][class$="-container"]
			padding-left: 0
.site-branding
	float: left
	margin-top: 0.65rem
	h1, h2
		display: table	
	a
		display: block
.nav-toggle
	border-bottom: 1px solid $gray-light-3
	color: $gray-dark
	float: right
	display: block
	padding: 1.5rem
	font-size: 2.08rem
	line-height: 1
	border-left: 1px solid $gray-light-3
	width: 5.1rem
	height: 5rem
	.header-no-image &
		border-bottom: 0
	@media all and (min-width: $bp-med)
		display: none
.toggle-open
	max-height: 100% !important
