.header
  @extend .lc
  background: $white
  border-bottom: 1px solid $gray-light-3
  padding: 0
  @media all and (max-width: $bp-sm-max)
      margin: 0 0 0 $space-half
      width: "calc(100% - %s)" % $space-half
  @media all and (min-width: $bp-med) and (max-width: $max-width)
      width: "calc(100% - %s)" % $space
  @media all and (min-width: $max-width)
      width: "calc(%s - %s)" % ($max-width $space)
.logo
  float: left
  margin: $space-half 0
  @media all and (max-width: $bp-sm-max)
    img
      height: 3.8rem
.nav-toggle
  background: $white-translucent
  border: 0
  border-left: 1px solid $gray-light-3
  color: $gray-dark
  float: right
  font-size: 2.08rem
  line-height: 1
  outline: 0
  padding: ($space + 0.1rem) $space $space ($space + 0.1rem)
  position: relative
  width: $nav-toggle-n-border
  height: $nav-toggle-height
  z-index: 2
  &:hover
    color: $gray
  @media all and (min-width: $bp-med)
    display: none
.search-form
  background: $white-translucent
  overflow: hidden
  margin: $space-half 0 0
  max-height: 0
  @media all and (max-width: $bp-sm-max)
    margin: 0.1rem 0 0
    position: absolute
    top: $nav-toggle-height
    right: 0
    z-index: 2
    &.active
      max-height: 100%
  @media all and (min-width: $bp-med)
    float: right
    max-height: none
